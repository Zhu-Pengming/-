<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/about_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="583dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:srcCompat="@drawable/ic_logo" />


    <TextView
        android:id="@+id/about_version"
        android:layout_width="147dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="524dp"
        android:gravity="center"
        android:text="Version 1.0"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.example.npm.nav_bar
        android:id="@+id/about_comments"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="437dp"
        android:background="@drawable/selector"
        my:hint="去评分"
        my:hintTextSize="10sp"
        my:icon="@drawable/comment" />

    <com.example.npm.nav_bar
        android:id="@+id/about_function"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="253dp"
        android:background="@drawable/selector"
        my:hint="功能介绍"
        my:icon="@drawable/function" />

    <com.example.npm.nav_bar
        android:id="@+id/about_complaint"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="358dp"
        android:background="@drawable/selector"
        my:hint="投诉"
        my:icon="@drawable/connect" />

    <ImageView
        android:id="@+id/about_back"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="313dp"
        android:layout_marginBottom="763dp"
        my:srcCompat="@drawable/version_back" />


</RelativeLayout>