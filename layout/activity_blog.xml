<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".BlogActivity">

    <TextView
        android:id="@+id/blog_tips"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:text="请先左滑"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/blog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="690dp"
        android:background="@color/black" />

    <ImageView
        android:id="@+id/blog_logo"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="700dp"
        app:srcCompat="@drawable/blog_logo" />

    <FrameLayout
        android:id="@+id/container_blog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


    </FrameLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/gallery"
        android:layout_width="380dp"
        android:layout_height="590dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="84dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/blog_return"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="284dp"
        android:layout_marginBottom="700dp"
        app:srcCompat="@drawable/blog_back" />

    <ImageView
        android:id="@+id/blogTips"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="224dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/tips" />

</RelativeLayout>