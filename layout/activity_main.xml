<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/scan"
        android:layout_width="61dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="676dp"
        app:srcCompat="@drawable/scanning" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="181dp"
        android:layout_height="178dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="472dp"
        app:shapeAppearanceOverlay="@style/circleImageStyle"
        app:srcCompat="@drawable/ic_logo" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="387dp"
        android:text="草悟暮语"
        android:textColor="#68544B"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_chat"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="280dp"
        android:backgroundTint="#59327E"
        android:text="开始聊天"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_chat_history"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#E7ED66"
        android:drawableTop="@drawable/ic_chat"
        android:elevation="15dp"
        android:text="聊天"
        android:textColor="#6F6251"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_blog"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#E7ED66"
        android:drawableTop="@drawable/ic_blog"
        android:text="博客"
        android:textColor="#6F6251"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_my"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#E7ED66"
        android:drawableTop="@drawable/ic_my"
        android:text="我的"
        android:textColor="#6F6251"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="Make Planting Start of a Day"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />


</RelativeLayout>