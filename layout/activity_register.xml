<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">
        <!-- 用户名部分 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:text="邮箱:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usename"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:hint="example@gmail.com"
            android:textColorHint="@color/main_background"/>
        <!-- 密码部分 -->
        <TextView
            android:layout_width="128dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="密码:"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usepwd"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="@color/main_background"/>
        <!-- 确认密码部分 -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="确认密码"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/usepwd2"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:hint="请再一次输入密码"
            android:textColorHint="@color/main_background"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/submit"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="100dp"
            android:text="注册"
            android:backgroundTint="@color/black"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="517dp"
        app:srcCompat="@drawable/ic_signup" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginEnd="242dp"
        android:layout_marginBottom="150dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="用户协议" />

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="137dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="已有账号?"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textToLogin"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:textColor="#F8C325"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="登录" />

</RelativeLayout>